@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DriveSafe - License Dashboard</title>
    <link href="~/temp/img/favicon.ico" rel="icon">
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        :root {
            --primary-yellow: #FFD700;
            --primary-black: #121212;
            --secondary-black: #1E1E1E;
            --table-header: #2A2A2A;
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
        }

        body {
            background-color: var(--primary-black);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            transition: margin-left 0.3s;
        }

        /* Keep all your existing styles... */
        .dashboard-header {
            background-color: var(--secondary-black);
            border-bottom: 3px solid var(--primary-yellow);
        }

        .license-card {
            background-color: var(--secondary-black);
            border: 2px solid var(--primary-yellow);
            border-radius: 10px;
            transition: transform 0.3s;
        }

            .license-card:hover {
                transform: translateY(-5px);
            }

        .btn-logout {
            background-color: var(--primary-yellow);
            color: var(--primary-black);
            font-weight: bold;
            border: none;
        }

            .btn-logout:hover {
                background-color: #e6c200;
            }

        .nav-pills .nav-link.active {
            background-color: var(--primary-yellow);
            color: var(--primary-black);
        }

        .nav-pills .nav-link {
            color: white;
        }

        .demo-car {
            color: #e6c200;
        }

        /* Table Styles */
        .license-table {
            background-color: var(--secondary-black);
            border-radius: 8px;
            overflow: hidden;
        }

            .license-table thead {
                background-color: var(--table-header);
                color: var(--primary-yellow);
            }

            .license-table th {
                padding: 15px;
                font-weight: 600;
            }

            .license-table td {
                padding: 12px 15px;
                vertical-align: middle;
                border-top: 1px solid #333;
            }

            .license-table tbody tr:hover {
                background-color: #2a2a2a;
            }

        .status-badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.8rem;
        }

        .status-paid {
            background-color: rgba(0, 200, 83, 0.2);
            color: #00C853;
        }

        .action-btn {
            background-color: var(--primary-yellow);
            color: var(--primary-black);
            border: none;
            padding: 5px 15px;
            border-radius: 4px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .action-btn:hover {
                background-color: #e6c200;
                transform: translateY(-2px);
            }

        .page-title {
            color: var(--primary-yellow);
            border-left: 4px solid var(--primary-yellow);
            padding-left: 15px;
            margin-bottom: 25px;
        }

        .info-text {
            background-color: rgba(255, 215, 0, 0.1);
            border-left: 4px solid var(--primary-yellow);
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 0 4px 4px 0;
        }

        /* New Sidebar Styles */
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: var(--secondary-black);
            border-right: 1px solid #333;
            padding-top: 80px;
            transition: all 0.3s ease;
            z-index: 100;
            overflow-y: auto;
        }

        .sidebar-collapsed {
            width: var(--sidebar-collapsed-width);
        }

            .sidebar-collapsed .sidebar-menu-text {
                display: none;
            }

            .sidebar-collapsed .sidebar-menu li a {
                justify-content: center;
            }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .sidebar-menu li {
                position: relative;
            }

                .sidebar-menu li a {
                    display: flex;
                    align-items: center;
                    padding: 12px 15px;
                    color: #ddd;
                    text-decoration: none;
                    transition: all 0.3s;
                    border-left: 3px solid transparent;
                }

                    .sidebar-menu li a:hover,
                    .sidebar-menu li a.active {
                        background-color: #2a2a2a;
                        color: var(--primary-yellow);
                        border-left: 3px solid var(--primary-yellow);
                    }

        .sidebar-menu-icon {
            margin-right: 10px;
            font-size: 1.1rem;
            min-width: 20px;
            text-align: center;
        }

        /* Updated Toggle Button Styles */
        .sidebar-toggle {
            position: absolute;
            right: -12px;
            top: 20px;
            background-color: var(--primary-yellow);
            color: var(--primary-black);
            border-radius: 50%;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 101;
            box-shadow: 0 0 10px rgba(0,0,0,0.3);
            border: 2px solid var(--secondary-black);
            transition: all 0.3s;
            opacity: 0.9;
        }

            .sidebar-toggle:hover {
                opacity: 1;
                transform: scale(1.1);
                background-color: #e6c200;
            }

        .main-content {
            margin-left: var(--sidebar-width);
            transition: all 0.3s ease;
        }

        .main-content-expanded {
            margin-left: var(--sidebar-collapsed-width);
        }

        .sidebar-menu li.active a {
            background-color: #2a2a2a;
            color: var(--primary-yellow);
            border-left: 3px solid var(--primary-yellow);
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <!-- Toggle Button - Now placed inside sidebar but positioned on border -->
        <div class="sidebar-toggle" id="sidebarToggle" style="margin-right: 25px;">
            <i class="fas fa-chevron-left" id="toggleIcon"></i>
        </div>

        <ul class="sidebar-menu">
            <li>
                <a href="@Url.Action("Dashboard", "Auth")">
                    <i class="fas fa-tachometer-alt sidebar-menu-icon"></i>
                    <span class="sidebar-menu-text">Dashboard</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Learner_license", "Auth")">
                    <i class="fas fa-user-graduate sidebar-menu-icon"></i>
                    <span class="sidebar-menu-text">Learner License</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-passport sidebar-menu-icon"></i>
                    <span class="sidebar-menu-text">IDP Applications</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-sync-alt sidebar-menu-icon"></i>
                    <span class="sidebar-menu-text">Renewal Applications</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-bell sidebar-menu-icon"></i>
                    <span class="sidebar-menu-text">Announcements</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <i class="fas fa-cog sidebar-menu-icon"></i>
                    <span class="sidebar-menu-text">Settings</span>
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content (Keep your existing content exactly as it was) -->
    <div class="main-content" id="mainContent">
        <!-- Dashboard Header -->
        <header class="dashboard-header py-3 mb-4">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h1 class="m-0">
                        <a href="@Url.Action("Index", "Home")" class="navbar-brand d-flex align-items-center border-end px-4 px-lg-5">
                            <h2 class="m-0"><i class="fa fa-car demo-car me-2"></i>Drivin</h2>
                        </a>
                    </h1>
                    <h3>Welcome, @ViewBag.FullName!</h3>
                    <a href="@Url.Action("Logout", "Auth")" id="logoutBtn" class="btn btn-logout px-4">LOGOUT</a>
                </div>
            </div>
        </header>


          <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <!-- Bootstrap JS Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <!-- Custom JavaScript -->
        <script>
            // Sidebar toggle functionality
            const sidebar = document.getElementById('sidebar');
            const sidebarToggle = document.getElementById('sidebarToggle');
            const toggleIcon = document.getElementById('toggleIcon');
            const mainContent = document.getElementById('mainContent');

            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('sidebar-collapsed');
                mainContent.classList.toggle('main-content-expanded');

                if (sidebar.classList.contains('sidebar-collapsed')) {
                    toggleIcon.classList.remove('fa-chevron-left');
                    toggleIcon.classList.add('fa-chevron-right');
                    sidebarToggle.style.right = '-12px'; // Adjust position when collapsed
                } else {
                    toggleIcon.classList.remove('fa-chevron-right');
                    toggleIcon.classList.add('fa-chevron-left');
                    sidebarToggle.style.right = '-12px'; // Original position
                }
            });

            // Keep your existing JavaScript
            document.getElementById('logoutBtn').addEventListener('click', function(e) {
                e.preventDefault();
                if(confirm('Are you sure you want to logout?')) {
                    window.location.href = this.getAttribute('href');
                }
            });

                   // Add this to your existing script
            document.addEventListener('DOMContentLoaded', function() {
                // Get current page URL
                const currentPage = window.location.pathname.split('/').pop() || 'index';

                // Highlight Dashboard by default if on dashboard view
                if (currentPage.includes('Dashboard') || currentPage === 'index') {
                    const dashboardItem = document.querySelector('.sidebar-menu li:first-child');
                    dashboardItem.classList.add('active');
                }

                console.log('Dashboard loaded');
            });
        </script>
</body>
</html>