
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DriveSafe - License Dashboard</title>
    <link href="~/temp/img/favicon.ico" rel="icon">
    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        :root {
            --primary-yellow: #FFD700;
            --primary-black: #121212;
            --secondary-black: #1E1E1E;
        }

        body {
            background-color: var(--primary-black);
            color: white;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-header {
            background-color: var(--secondary-black);
            border-bottom: 3px solid var(--primary-yellow);
        }

        .license-card {
            background-color: var(--secondary-black);
            border: 2px solid var(--primary-yellow);
            border-radius: 10px;
            transition: transform 0.3s;
        }

            .license-card:hover {
                transform: translateY(-5px);
            }

        .btn-logout {
            background-color: var(--primary-yellow);
            color: var(--primary-black);
            font-weight: bold;
            border: none;
        }

            .btn-logout:hover {
                background-color: #e6c200;
            }

        .nav-pills .nav-link.active {
            background-color: var(--primary-yellow);
            color: var(--primary-black);
        }

        .nav-pills .nav-link {
            color: white;
        }

        .demo-car{
            color: #e6c200;
        }
    </style>
</head>
<body>
    
    <!-- Dashboard Header -->
    <header class="dashboard-header py-3 mb-4">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="m-0">
                    <a href="index.html" class="navbar-brand d-flex align-items-center border-end px-4 px-lg-5">
                        <h2 class="m-0"><i class="fa fa-car demo-car me-2"></i>Drivin</h2>
                    </a>
                </h1>
                <h3>Welcome, @ViewBag.FullName!</h3>

                <a href="@Url.Action("Logout","auth")" id="logoutBtn" class="btn btn-logout px-4">LOGOUT</a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <!-- Sidebar Navigation -->
            <div class="col-md-3">
                <div class="card mb-4 license-card">
                    <div class="card-body text-center">
                        <img src="https://via.placeholder.com/100" class="rounded-circle mb-3" alt="Profile">
                        <h5 class="card-title">John Driver</h5>
                        <p class="text-muted">License No: DL-123456789</p>
                    </div>
                </div>

                <ul class="nav nav-pills flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#dashboard" data-bs-toggle="pill">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#license" data-bs-toggle="pill">My License</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#violations" data-bs-toggle="pill">Violations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#renewal" data-bs-toggle="pill">Renewal</a>
                    </li>
                </ul>
            </div>

            <!-- Main Panel -->
            <div class="col-md-9">
                <div class="tab-content">
                    <!-- Dashboard Tab -->
                    <div class="tab-pane fade show active" id="dashboard">

                        @* <a id="logoutBtn" class="btn btn-logout>Apply for license</a> *@

                        <div class="card license-card mb-4">
                            <div class="card-body">
                                <h4 class="card-title" style="color: var(--primary-yellow);">Welcome Back!</h4>
                                <div class="alert alert-warning">
                                    Your license expires in <strong>45 days</strong>. Please renew soon.
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="card license-card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">License Status</h5>
                                        <p class="display-6">ACTIVE</p>
                                        <div class="progress mb-3">
                                            <div class="progress-bar bg-warning" role="progressbar" style="width: 85%"></div>
                                        </div>
                                        <small>Expires on: 15/10/2023</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="card license-card h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">Violation Points</h5>
                                        <p class="display-6">5/12</p>
                                        <div class="progress mb-3">
                                            <div class="progress-bar bg-danger" role="progressbar" style="width: 42%"></div>
                                        </div>
                                        <small>2 violations this year</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- License Details Tab -->
                    <div class="tab-pane fade" id="license">
                        <div class="card license-card mb-4">
                            <div class="card-body">
                                <h4 class="card-title" style="color: var(--primary-yellow);">License Details</h4>
                                <div class="table-responsive">
                                    <table class="table table-dark">
                                        <tr>
                                            <th>License Number</th>
                                            <td>DL-123456789</td>
                                        </tr>
                                        <tr>
                                            <th>Full Name</th>
                                            <td>John Driver</td>
                                        </tr>
                                        <tr>
                                            <th>Date of Birth</th>
                                            <td>15/05/1985</td>
                                        </tr>
                                        <tr>
                                            <th>License Type</th>
                                            <td>Commercial</td>
                                        </tr>
                                        <tr>
                                            <th>Issued Date</th>
                                            <td>15/10/2018</td>
                                        </tr>
                                        <tr>
                                            <th>Expiry Date</th>
                                            <td>15/10/2023</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JavaScript -->
    <script>
        // Logout functionality
        document.getElementById('logoutBtn').addEventListener('click', function() {
            if(confirm('Are you sure you want to logout?')) {
                // In a real app, this would redirect to logout endpoint
                window.location.href = 'login.html';
            }
        });

        // Simulate loading data
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard loaded');
            // You would fetch real user data here in a real app
        });
    </script>
</body>
</html>
